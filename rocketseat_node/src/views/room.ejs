<!DOCTYPE html>
<html lang="pt_br">
    <head>
        <title>Perguntas e Respostas - Rocket.Q</title>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <!--Viewport-->
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- CSS -->
        <link rel="stylesheet" href="/style/global.css">
        <link rel="stylesheet" href="/style/room.css">
        <link rel="stylesheet" href="/style/modal.css">

        <!-- Fontes Google -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Alfa+Slab+One&family=Fredericka+the+Great&family=Monoton&family=Open+Sans:wght@300;400&family=Poppins:wght@400;500;700&display=swap" rel="stylesheet">
        
        <!-- Scripts -->
        <script src="/scripts/main.js" defer type="module"></script>

    </head>

    <body>
        <div id="room" class="content">
            <header>
                <a href="/"><img src="/images/logo.svg" alt="Logo Rocket.Q"/></a>

                <div class="buttons">
                    <div class="button outlined" id="room-id" data-id="<%= roomId %>">
                        #<%= roomId %>
                        <img src="/images/copy.svg" alt="Copy number of room">
                    </div>
                    <a href="/create-pass" class="button">
                        <img src="/images/users-white.svg" alt="Create room">
                        Criar Sala

                    </a>
                </div>

            </header>

            <main>
                <section id="question-form">
                    <h2>Faça sua pergunta</h2>

                    <form action="/question/create/<%= roomId %>" method="POST">
                        <label for-id="question" class="sr-only">O que você quer perguntar?</label>
                        <textarea name="question" id="question" cols="30" rows="10" placeholder="O que você quer perguntar?"></textarea>
                        <footer>
                            <div>
                                <img src="/images/lock.svg" alt="lock">
                                Esta pergunta é anônima
                            </div>
                            <button>Enviar</button>

                        </footer>

                    </form>
                </section>
                <!--Questoes-->
                <section id="questions">
                    <h2 class="sr-only">Perguntas da comunidade</h2>
                    <div class="questions">

                        <% if (isNoQuestions) { %>
                            <%- include ('parts/no-question') %>
                        <% } %>

                        <% questions.forEach(question => { %>

                            <div class="question-wrapper">
                                <div class="question-content">
                                    <div class="user">
                                        <img src="/images/user.svg" alt="Avatar">
                                    </div>
                                    <div class="question">
                                        <p><%= question.title %></p>
                                    </div>
                                  
                                </div>
                                <div class="actions">
                                    <a href="#" class="check" data-id="<%= question.id %>">
                                        <img src="/images/check 1.svg" alt="marcar como lida">
                                        Marcar como lida
                                    </a>
                                    <a href="#" class="delete" data-id="<%= question.id %>">
                                        <img src="/images/trash 1.svg" alt="excluir">
                                        Excluir
                                    </a>
                                </div>
                            </div>

                        <% }); %>  

                        <% questionsRead.forEach(questionRead => { %>

                            <div class="question-wrapper read">
                                <div class="question-content">
                                    <div class="user">
                                        <img src="/images/user.svg" alt="Avatar">
                                    </div>
                                    <div class="question">
                                        <p><%= questionRead.title %></p>
                                    </div>
                                    
                                </div>
                                <div class="actions">
                                   
                                    <a href="#" class="delete" data-id="<%= questionRead.id %>">
                                        <img src="/images/trash 1.svg" alt="excluir">
                                        Excluir
                                    </a>
                                </div>
                            </div>
    
                        </div>
                        <% }) %>
                       
                            
                       
                    
                       

                </section>
            </main>

        </div>

        <!-- Modal -->
        <div class="modal-wrapper">
            <div class="modal">
                <h2>Excluir Pergunta</h2>
                <p>Tem certeza que você deseja exlcuir esta pergunta ?</p>
                <form action="#" method="POST">
                    <label class="sr-only"  for-id="password">Digite sua senha admin</label>
                    <input id="password" type="password" name="password" placeholder="Digite a senha de administrador">
                    <div class="buttons">
                        <div class="button grey cancel">Cancelar</div>
                        <button class="red">Sim, excluir</button>
                    </div>
                </form>
            </div>
        </div>
        

    </body>


</html> 